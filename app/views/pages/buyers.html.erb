<div class="registration-popup">
  <div class="registration-content">
    <a href="javascript:void(0)" class="closebtn registration-content_close" onclick="closeForm()">&times;</a>
    <h4>Registration Form</h4>
    <p>Please make sure to fill out all details. We will call you at the earliest in order to discuss your attendance.</p>
    <form id="fs-frm" name="survey-form" accept-charset="utf-8" action="https://formspree.io/meganne@recallagency.com" method="post">
        <input type="text" name="name" id="full-name" placeholder="First and Last Name" required="">
        <input type="text" name="company" id="company" placeholder="Company Name" required="">
        <input type="text" name="companysite" id="companysite" placeholder="Company URL(www)" required="">
        <input type="text" name="country" id="country" placeholder="Country" required="">
        <input type="email" name="_replyto" id="email-address" placeholder="Email Address" required="">
        <input type="text" name="jobtitle" id="jobtitle" placeholder="Job Title" required="">
        <input type="text" name="phone" id="phone" placeholder="(Area Code) + Phone Number" required="">
        <fieldset id="fs-frm-selects">
          <label for="timely">1. You are a:</label>
          <select name="timely" id="timely" required="">
            <option value="Choose" selected="" disabled="">Choose</option>
            <option value="1">Buyer</option>
            <option value="3">Exhibitor</option>
          </select>
          <label for="timely">2.If you are a buyer, here are some choices</label>
          <select name="quality" id="quality" required="">
            <option value="Choose" selected="" disabled="">Choose</option>
            <option value="1">Mice</option>
            <option value="3">Leisure</option>
            <option value="5">Other</option>
          </select>
        </fieldset>
        <label for="message">Additional Comments</label>
        <textarea rows="3" name="message" id="message" placeholder="Text to Type" required=""></textarea>
        <input type="hidden" name="_subject" id="email-subject" value="Survey Responses">
      <input class="red-button" type="submit" value="Submit">
    </form>
  </div>
</div>
<script>
  const openForm = () => {
    document.querySelector(".registration-popup").style.display = "block";
  };

  const closeForm = () => {
    document.querySelector(".registration-popup").style.display = "none";
  };
</script>
